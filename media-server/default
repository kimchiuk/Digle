server {
    listen 443 ssl;
    server_name localhost;

    # mkcert에서 생성한 SSL 인증서와 키의 경로를 지정합니다.
    ssl_certificate /mnt/c/Users/SSAFY/Desktop/프로/localhost.pem; # mkcert로 생성한 인증서 파일 경로
    ssl_certificate_key /mnt/c/Users/SSAFY/Desktop/프로/localhost-key.pem; # mkcert로 생성한 키 파일 경로

    location / {
        proxy_pass http://localhost:8088; # Janus의 HTTP 포트
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }

    location /ws {
        proxy_pass http://localhost:8188; # Janus의 WebSocket 포트
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}